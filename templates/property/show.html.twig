{% extends 'base.html.twig' %}
{% block title property.title  %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} pièces - {{ property.surface }} m²</h2>
                    <div class="text-primary" style="font-size: 4rem;font-weight:bold;">
                        {{ property.formattedPrice }} €
                    </div>
                    <ahref="#" class="btn btn-primary">Contacter l'agence</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">

        <p>
            {{ property.description | nl2br}}
        </p>
        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <th>Surface</th>
                        <td>{{ property.surface }} m²</td>
                    </tr>
                    <tr>
                        <th>Nombre de pièces</th>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <th>Prix</th>
                        <td>{{ property.formattedPrice }} €</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ property.city }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ property.address }}</td>
                    </tr>
                    <tr>
                        <th>Code postal</th>
                        <td>{{ property.postalCode }}</td>
                    </tr>
                    <tr>
                        <th>Chauffage</th>
                        <td>{{ property.heatType }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
                <div class="row">
                </div>
        </div>

    </div>

{% endblock %}



