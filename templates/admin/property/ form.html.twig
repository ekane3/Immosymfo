{% form_theme form 'bootstrap_4_layout.html.twig' %}
        {{ form_start(form) }}
<div class="row">
    <div class="col-md-4"> {{ form_row(form.title) }} </div>
    <div class="col-md-4"> {{ form_row(form.surface) }} </div>
</div>
<div class="row">
    <div class="col-md-4"> {{ form_row(form.price) }} </div>
    <div class="col-md-4"> {{ form_row(form.rooms) }} </div>
</div>
<div class="row">
    <div class="col-md-4"> {{ form_row(form.bedrooms) }} </div>
    <div class="col-md-4"> {{ form_row(form.floor) }} </div>
</div>
<div class="row">
    <div class="col-md-4"> {{ form_row(form.heat) }} </div>
    <div class="col-md-4"> {{ form_row(form.city) }} </div>
</div>
<div class="row">
    <div class="col-md-4"> {{ form_row(form.address) }} </div>
    <div class="col-md-4"> {{ form_row(form.postal_code) }} </div>
</div>
<div class="row">
    <div class="col-md-8"> {{ form_row(form.description) }} </div>
</div>
{{ form_widget(form) }}

<button type="submit" class="btn btn-primary my-4">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}